# Server Configuration
PORT=8000

# Database
DATABASE_URL=postgres://user:password@localhost:5432/church

# Frontend URL (for CORS and OAuth redirect)
FRONTEND_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:8000/auth/google/callback

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=change-this-in-production

# MinIO/S3 Storage (required for file uploads)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=church
MINIO_USE_SSL=false

# OpenTelemetry & Observability (optional - only set if you want to export traces/metrics/logs)
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
# OTEL_SERVICE_NAME=church-api
# OTEL_SERVICE_VERSION=2.0.0

# Loki (structured logs) - Optional, enables centralized logging
# LOKI_ENDPOINT=http://localhost:3100
