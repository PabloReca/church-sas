    "@opentelemetry/exporter-trace-otlp-http": "0.52.1",
    "@opentelemetry/resources": "1.26.0",
    "@opentelemetry/sdk-metrics": "1.26.0",
    "@opentelemetry/sdk-trace-base": "1.26.0",
    "@opentelemetry/sdk-trace-node": "1.26.0",
    "@opentelemetry/semantic-conventions": "1.26.0",
    "@orpc/openapi": "^1.13.2",
    "@orpc/server": "^1.13.2",
    "@orpc/zod": "^1.13.2",
    "@scalar/hono-api-reference": "^0.9.30",
    "cookie": "^0.6.0",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.11.1",
    "jose": "^6.1.3",
    "minio": "^8.0.6",
    "pino": "^10.1.1",
    "pino-loki": "^3.0.0",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.7",
    "sharp": "^0.33.5",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.5",
    "@types/cookie": "^0.6.0",
    "@types/uuid": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-plugin-drizzle": "^0.2.3",
    "globals": "^16.5.0",
    "typescript-eslint": "^8.51.0"
  }
